<form method="POST" action="/listing/<%=listing.id%>?_method=PUT" class="was-validated" novalidate
    enctype="multipart/form-data">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" value="<%=listing.title%>" name="Listing[title]" class="form-control required" required>
        <div class="invalid-feedback">Required</div>
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="Listing[description]" class="form-control" required><%=listing.description%></textarea>
        <div class="invalid-feedback">Required</div>
    </div>
    <div class="mb-3">
        <p>Original Image</i></p>
        <img src="<%=originalImage%>" alt="Image">
    </div>
    <div class="mb-3">
        <label for="image" class="form-label">Upload Image <i style="font-size: 0.8rem;">(only .png/.jpg/.jpeg files)</label>
        <input type="file" name="Listing[image]" class="form-control">
        <div class="invalid-feedback">Required</div>
    </div>
    <div class="row">
        <div class="col-4">
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" value="<%=listing.price%>" name="Listing[price]" class="form-control" required>
                <div class="invalid-feedback">Required</div>
            </div>
        </div>
        <div class="col-8">
            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" value="<%=listing.country%>" name="Listing[country]" class="form-control" required>
                <div class="invalid-feedback">Required</div>
            </div>
        </div>
    </div>
    <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" value="<%=listing.location%>" name="Listing[location]" class="form-control" required>
        <div class="invalid-feedback">Required</div>
    </div>
    <button class="btn btn-dark update-btn mt-3">Update</button>
    <br><br><br>
</form>